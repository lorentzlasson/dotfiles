
# open config
alias otc="vim ~/.tmux.conf"
alias ozsh="vim ~/.zshrc"
alias ovrc="vim ~/.config/nvim/init.lua"

# reload config
alias relsh="exec $SHELL"

# drop-in upgrades
alias bat="batcat" # https://github.com/sharkdp/bat
# alias cd="z" # https://github.com/ajeetdsouza/zoxide
alias grep="rg" # https://github.com/BurntSushi/ripgrep
alias vim="nvim" # https://github.com/neovim/neovim
alias ls="exa -1" # https://github.com/neovim/neovim

alias python=python3
alias pip=pip3

# convenience
alias cl="clear"
alias clg="clear && git status"
alias open=xdg-open
alias copy="xclip -sel clip"
alias copy1l="tr -d '\n' | copy"
alias localip="hostname -I | cut -d ' ' -f 1"
alias :q="exit"
